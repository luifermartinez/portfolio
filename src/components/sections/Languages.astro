---
import Section from "@/components/Section.astro";
import { languages } from "@cv";
---

<Section title="Lenguajes">
  <ul>
    {
      languages.map(({ language, fluency }) => (
        <li>
          <span>
            {language} ({fluency})
          </span>
        </li>
      ))
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  li {
    display: flex;
    justify-content: space-between;
    font-size: 0.75rem;
    font-weight: 500;
    color: #666;
    padding: 0.3rem 0.6rem;
    border-radius: 6px;
    border: 1px solid #ddd;
  }
</style>
