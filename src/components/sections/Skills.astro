---
import Section from "@/components/Section.astro";
import { skills } from "@cv";
---

<Section title="Habilidades">
  <ul>
    {
      skills.map(({ name }) => (
        <li>
          <span>{name}</span>
        </li>
      ))
    }
  </ul>
</Section>

<style>
  ul {
    display: inline-flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  li {
    border-radius: 6px;
    background: #444;
    color: #fff;
    font-size: 0.8rem;
    font-weight: 500;
    padding: 0.2rem 0.5rem;
  }

  @media print {
    li {
      background: #fff;
      color: #444;
      border: 1px solid #444;
    }
  }
</style>
